{
	"dependencies": {
		"next": "^9.4.0",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"sass": "^1.26.5"
	},
	"devDependencies": {
		"@superkoders/eslint-config": "1.2.24",
		"@superkoders/prettier-config": "0.2.5",
		"@superkoders/stylelint-config": "1.2.3",
		"@types/node": "^14.0.1",
		"@types/react": "^16.9.35",
		"@types/react-dom": "^16.9.8",
		"husky": "3.0.9",
		"lint-staged": "9.5.0",
		"typescript": "^3.9.2"
	},
	"scripts": {
		"dev": "next",
		"build": "next build",
		"start": "next start",
		"lint:css": "stylelint --syntax scss \"src/**/*.{css,scss}\"; exit 0",
		"lint:css:fix": "prettier-stylelint --write \"src/**/*.{css,scss}\"",
		"lint:js": "eslint .; exit 0",
		"lint:js:fix": "eslint . --fix"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{scss}": [
			"stylelint --syntax scss \"*.{css,scss}\""
		],
		"*.js": [
			"eslint"
		]
	}
}
